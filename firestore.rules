
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the portfolio content.
    // Allow public read access for all visitors.
    // Only allow writes if the user is the authenticated owner with the specific UID.
    match /portfolioContent/{contentId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == 'gHZ9n7s2b9X8fJ2kP3s5t8YxVOE2';
    }
  }
}
