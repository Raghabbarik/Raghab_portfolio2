
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to all documents in the portfolioContent collection.
    // Restrict all write operations (create, update, delete) to authenticated users.
    match /portfolioContent/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
